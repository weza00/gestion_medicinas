# Configuración de Base de Datos
DB_HOST=localhost
DB_USER=root
DB_PASS=
DB_NAME=gestion_medicinas

# Configuración de la Aplicación
APP_NAME="MediPlus - Farmacia Hospitalaria"
APP_ENV=development
APP_DEBUG=true
APP_TIMEZONE=America/Bogota

# URLs y Dominios (opcional - si no se especifica, se detecta automáticamente)
# BASE_URL=http://localhost
# FORCE_HTTPS=false

# Configuración de Archivos
MAX_UPLOAD_SIZE=10485760
ALLOWED_UPLOAD_TYPES=pdf,jpg,jpeg,png
UPLOADS_PATH=public/uploads

# Configuración de Sesión
SESSION_LIFETIME=3600
SESSION_NAME=mediplus_session

# Configuración de Seguridad
ENABLE_RATE_LIMITING=true
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_TIME=300

# Configuración de Email (para futuras funcionalidades)
MAIL_DRIVER=smtp
MAIL_HOST=localhost
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@mediplus.com
MAIL_FROM_NAME="Sistema MediPlus"

# Configuración de Logs
LOG_LEVEL=debug
LOG_PATH=logs/
ENABLE_DB_LOGGING=true

# Configuración de Cache
CACHE_DRIVER=file
CACHE_LIFETIME=3600