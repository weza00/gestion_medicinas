# Configuración para Apache (compatible con nginx)
# Esta configuración permite que la aplicación funcione tanto en Apache como nginx

Options -MultiViews
RewriteEngine On

# Redirigir HTTPS en production (descomentar si es necesario)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Manejo de URLs amigables
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.+)$ index.php?url=$1 [QSA,L]

# Protección contra acceso directo a archivos sensibles
<Files ~ "\.(sql|md|txt|log|sh|bak|backup|conf)$">
    Order deny,allow
    Deny from all
</Files>

# Protección de directorios
RedirectMatch 404 /config/
RedirectMatch 404 /sql/
RedirectMatch 404 /logs/

# Headers de seguridad (si mod_headers está habilitado)
<IfModule mod_headers.c>
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set X-Content-Type-Options "nosniff"
</IfModule>

# Cache para archivos estáticos
<IfModule mod_expires.c>
    ExpiresActive on
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType text/javascript "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
</IfModule>